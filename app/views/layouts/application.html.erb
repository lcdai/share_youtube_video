<!DOCTYPE html>
<html>
<head>
  <title>ShareYoutubeVideo</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Share Youtube Video', root_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Videos', root_path %></li>
      <li><%= link_to 'Add Video', new_video_path %></li>
    </ul>
    <div class="pull-right text-info">
      <% if logged_in? %>
        <h4>Hello <%= current_user.username %>!</h4>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <%= yield %>
</div>
</body>
</html>
